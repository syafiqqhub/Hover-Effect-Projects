<body>

<audio autoplay loop>
    <source src="https://g.top4top.io/m_3339thju41.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<div class="card">
    <div class="inner-card"></div>
    <div class="shadow"></div>
</div>

<script>
    const card = document.querySelector('.card');
    const innerCard = document.querySelector('.inner-card');
    const shadow = document.querySelector('.shadow');

    card.addEventListener('mousemove', (e) => {
        const { offsetX, offsetY, target } = e;
        const { clientWidth, clientHeight } = target;
        const x = (offsetX / clientWidth) * 2 - 1;
        const y = (offsetY / clientHeight) * 2 - 1;
        
        innerCard.style.transform = `rotateY(${x * 30}deg) rotateX(${y * -30}deg)`;
        shadow.style.transform = `translate(${x * 10}px, ${y * 10}px)`;
        shadow.style.opacity = 0.5;
    });

    card.addEventListener('mouseleave', () => {
        innerCard.style.transform = `rotateY(0deg) rotateX(0deg)`;
        shadow.style.transform = `translate(0, 0)`;
        shadow.style.opacity = 0;
    });
</script>

</body>
</html>
